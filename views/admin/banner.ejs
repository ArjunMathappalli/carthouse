<%- include('../layouts/header.ejs') %>
  <%- include('../layouts/navbar.ejs') %>
    <%- include('../layouts/sidebar.ejs') %>
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">BANNER</h4>
                  <div class="row justify-content-end">
                    <div class="col-auto">
                      <a href="/admin/addBanner"><button type="button" class="btn btn-primary">Add Banner</button></a>
                    </div>
                  </div>
                  <div class="table-responsive text-center">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th class="text-center">
                            No.
                          </th>
                          <th class="text-center">
                            Name
                          </th>
                          <th class="text-center">
                            Description
                          </th>
                          <th class="text-center">
                            Image
                          </th>
                          <th class="text-center">
                            Action
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if (banner.length> 0) { %>
                          <% for (let i=0; i < banner.length; i++) { %>
                            <tr>
                              <td class="mt-3">
                                <%= i + 1 %>
                              </td>
                              <td>
                                <%= banner[i].name %>
                              </td>
                              <td>
                                <%= banner[i].description %>
                              </td>
                              <td>
                                <div><img style="border-radius: 0; width: 50px; height: 50px;"
                                    src="/productImages/<%=banner[i].image;%>"></div>
                              </td>
                              <td>
                                <a href="/admin/editbanner?id=<%= banner[i]._id %>" class="table-link text-info">
                                  <button type="button" onclick="deleteC('<%= banner[i]._id %>')"
                                    class="btn btn-success btn-sm">edit</button>
                                </a>
                              </td>
                            </tr>
                            <% } %>
                              <% } else { %>
                                <tr>
                                  <td colspan="5" class="alert alert-danger">Banner Not Found</td>
                                </tr>
                                <% } %>
                      </tbody>

                    </table>
                  </div>
                </div>
              </div>
            </div>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.0/sweetalert.min.js"></script>
            <sc>


              <%- include('../layouts/footer.ejs') %>