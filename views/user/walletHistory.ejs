<%- include ('../layouts/user/header.ejs') %>
  <%- include ('../layouts/user/navbar.ejs') %>

<div class="col-lg-12 grid-margin stretch-card" style="margin-top: 100px;">
    <div class="card">
        <div style="width: 100%;">
        <div class="card-body">
            <!-- <h4 class="card-title"
                style="text-align: center; font-size: 28px; font-weight: bold; color:deeppink; text-transform: uppercase; letter-spacing: 2px; margin-bottom: 20px;">
                Wallet History</h4> -->

            <div class="table-responsive">
                <table class="table table-striped" id="Table" >
                    <thead>
                        <tr style="height: 50px;">
                            <th>S.No </th>
                            <th>Status</th>
                            <th>Date</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% wallet.forEach(function(wallet, index) { %>
                        <tr style="height: 50px;">
                            <td class="py-1">
                                <%= index+1 %>

                            </td>
                            <td><%= wallet.status %></td>
                            <td><%= wallet.date.toDateString() %></td>
                            <td><%= wallet.amount %></td>

                           
                           
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>
